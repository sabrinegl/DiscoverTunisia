<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/view_contact_item_avatar"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/default_avatar" />
    <TextView
        android:id="@+id/view_contact_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/view_contact_item_avatar"
        android:layout_alignParentTop="true"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryText"/>

    <TextView
        android:id="@+id/view_contact_item_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/view_contact_item_avatar"
        android:layout_below="@+id/view_contact_item_name"
        android:textSize="16sp"
        android:textStyle="italic"
        android:textColor="@color/colorSecondaryText"/>

</RelativeLayout>